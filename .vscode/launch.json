    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Debugger json",
            "program": "${workspaceFolder}/node_modules/mocha/bin/mocha",
            "args": [
                "test/spec/*.js",
                "--timeout",
                "20000",
                "--require",
                "test/main/baseTest",
                "--reporter",
                "allure-mocha",
                "--bail"
